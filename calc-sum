# dependencies
sha3-512sum

# usage
calc-sum file(s)|directory

# examples
## add file hash to hash-list
calc-sum file1 [file2]

## add all files to hash-list
calc-sum directory

# '

## get arg
args="$@"


function sourcing ()
{
    source $XDG_DATA_HOME/c/git/code/source/function/text_appearance
}


function process_args ()
{
    if [ "$#" -eq 0 ]; then

	## no args given
	no_args

    fi

    while [ "$#" -gt 0 ]; do

	## looping through arguments
	case "$1" in

	    -- )
	    	shift
	    	continue
	    	;;

	    * )
		## rest of args are files or directories
		files_ssl=$@
		conv_ssl_to_arr "$files_ssl"
		break
		;;

	esac

    done
}


function no_args ()
{
    printf "no valid ${fg_amber}%s${st_def}\n" 'filename'
    exit 40
}


function conv_ssl_to_arr ()
{
    ## convert space separated list (ssl) to array
    IFS=' '
    read -r -a files_arr <<< "$files_ssl"
}


function replace_add_create ()
{
    ## replace or add lines inside hash_list,
    ## or create hash_list for given files or directories
    #TODO directories

    if [[ -f $file_name ]]; then

	## argument is a file

	if [[ -f $hash_list ]]; then

	    ## hash_list exists
	    if [[ -n $(grep -riIn "$file_name" "$hash_list") ]]; then

		## filename exists in hash_list
		file_hash=$(sha3-512sum $file_name)

		## replace line containing filename
		sed -i "s;.*$file_name.*;$file_hash;" $hash_list

	    else

		## filename does not exist in hash_list
		file_hash=$(sha3-512sum $file_name)

		## add file_hash to hash_list
		printf '\n%s\n' "$file_hash" >> $hash_list

	    fi

	else

	    ## no hash-list exists
	    file_hash=$(sha3-512sum $file_name)

	    ## create hash_list with one file_hash
	    printf '%s\n' "$file_hash" > "$hash_list" 2>/dev/null

	fi

    elif [[ -d $file_name ]]; then

	## argument is a directory

	replace_hash_list

    fi
}


function replace_hash_list ()
{
    [[ -f $hash_list ]] && rm $hash_list

    ## calculate and write sha512sums of all items in dir_name
    hashes=$(fd --max-depth 1 --type file --exec sha3-512sum {} \; -- . $dir_name)
    printf '%s\n' "$hashes" > $hash_list 2>/dev/null

    ## user feedback
    wc -l $hash_list
    ls -l $hash_list
}


function conv_ssl_to_arr ()
{
    ## convert space separated list (ssl) to array
    IFS=' '
    read -r -a files_arr <<< "$files_ssl"
}


function loop_through_files ()
{
    for file in "${files_arr[@]}"; do

	## expand symlinks and relative directories
	file_name=$(realpath "$file")

	## set file_name directory
	if [[ -d $file_name ]]; then

	    dir_name=$file_name

	elif [[ -f $file_name ]]; then

	    dir_name=$(dirname $file_name)

	fi

	hash_list="${dir_name}"/sha3-512sums

	replace_add_create

    done
}


function sort_hash_list ()
{
    hash_list_sorted=$(sort -k 2,2 $hash_list)
    printf '%s' "$hash_list_sorted" > $hash_list 2>/dev/null
}


function main ()
{
    sourcing
    process_args $args
    loop_through_files
    sort_hash_list
}

main
