#! /usr/bin/env sh

# world time clock
# tip: leave search empty and pipe to fzf

time_format='%a %F %T'
zone_info='/usr/share/zoneinfo/posix/'

time_zones="$(find -L $zone_info -type f)"

fzf_input=$(
    while read time_zones; do

	## rfc-2822 format
	d=$(TZ=$z date -R)

	## other time_format
	#d=$(TZ=$z date +"$time_format")

	printf "%23s %-34s\n" "$d" ${z#$zone_info}

    done
	 )

printf "$fzf_in
